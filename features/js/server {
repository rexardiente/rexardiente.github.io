server {
    listen 80;
    server_name 156.67.219.221;

    return 301 $scheme://coinica.net;
}

server {
    listen 443 ssl; # managed by Certbot
    listen [::]:443 http2 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/coinica.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/coinica.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    server_name coinica.net;
    underscores_in_headers          on;
    proxy_pass_request_headers      on;
    proxy_set_header                Host $host;
    proxy_set_header                X-NginX-Proxy true;
    proxy_set_header                X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_redirect                  off;
    proxy_http_version              1.1;
    proxy_set_header                Upgrade $http_upgrade;
    proxy_set_header                Connection "Upgrade";

    root /var/www/html;

    location / {
        index index.html;
        #alias /var/www/html/index.html;
    }

}

server {
    if ($host = www.coinica.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = coinica.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80 ;
        listen [::]:80 ;
    server_name coinica.net www.coinica.net;
    return 404; # managed by Certbot




}

